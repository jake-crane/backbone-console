{
	"root": true,
	"env": {
		"browser": true,
		"commonjs": true,
		"mocha": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": [
		"lodash",
		"backbone"
	],
	"extends": [
		"eslint:recommended",
		"plugin:lodash/recommended",
		"plugin:backbone/recommended"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": [
			"warn",
			{
				"args": "all",
				"argsIgnorePattern": "^e$|^evt$"
			}
		],
		"lodash/prefer-lodash-method": [
			1,
			{
				"ignoreMethods": [
					"find",
					"replace"
				]
			}
		]
	},
	"globals": {
		"componentHandler": false
	}
}
